                        <option value="4">سرکار خانم</option>
                    </select>
                </div>

                <div class="form-floating mb-3 ">
                    <select class="form-select" aria-label="تخصص پزشک معالج" style="direction:rtl">
                        <option selected disabled>تخصص پزشک معالج</option>
                        <option value="1">پزشک عمومی</option>
                        <option value="2">متخصص</option>
                        <option value="3">فوق تخصص</option>
                        <option value="4">مامایی</option>
                    </select>
                </div>
