<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/StyleLayout1.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/root.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/sweetalert2.js"></script>
</head>
<body style="margin:0px;">
    <div class="header" style="display:flex">
        <button id="bt-signout" class="btn btn-primary" >sign out</button>
    </div>

    <div id="slider" class="slider open-sidebar">
        <div style="display:block;position:absolute;height:100%;width:100%">
            <div style="display:block;position:absolute;top:0px;left:0px;right:0px;text-align:left;">
                <button id="btn-sidebar" class="btn" style="background-color:black;box-shadow:none;" type="button">
                    <svg width="32" height="32" fill="#fff" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg>
                </button>
            </div>
            <div style="display:block;position:absolute;top:40px;bottom:30px;left:5px;right:0px">

            </div>
        </div>
    </div>

    <div class="footer" style="display:flex;color:white;">
        <div style="display: flex; position: absolute; align-items: center; justify-items: center; font-family: Tahoma; font-size: small; font-weight: 100; height: 100%">
            <span>این برنامه متعلق به مجموعه سیپ می باشد</span>
        </div>
    </div>

    <div class="content" style="background-color:#2b2a2a">
        @RenderBody()
    </div>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@

<script>
        $(document).ready(function () {

            $("#bt-signout").on("click", function () {
                $.ajax({
                    url: "@Url.Action("signout" , "Home")",
                    type: "GET",
                    success: function () {
                        window.location.replace("@Url.Action("login2", "Home")");
                    },
                    error: function (error) {
                        console.table(error);
                        alert(error.status + "\r\n" + error.statusText + "\r\n" + error.responseText);
                    }
                })
            });

            $("#btn-sidebar").on("click", function () {
                $("#slider").toggleClass("close-sidebar open-sidebar");

                if ($("#slider").hasClass("open-sidebar")) {
                    $(".header").css("right", "200px");
                    $(".footer").css("right", "200px");
                    $(".content").css("right", "200px");
                }
                else {
                    $(".header").css("right", "60px");
                    $(".footer").css("right", "60px");
                    $(".content").css("right", "60px");
                }
            })
        })
</script>
</body>
</html>
